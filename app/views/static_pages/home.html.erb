<% provide(:title, "Home") %>
<% if signed_in? %>
   <div class="row">
     <aside class="span4">
       <section>
          <%= render 'shared/user_infor' %>
       </section>
       <section>
          <%= render 'shared/stats' %>
       </section>
       <section>
          <%= render 'shared/micropost_form' %>
       </section>
       
     </aside>
     <div class="span10">
        <h3>Microposts</h3>
        <div id="ajax_micropost">
            <%= render 'shared/feed' %>
        </div>
     </div>
   </div>
    
<% else %> 
  <div class="center hero-unit">
    <h1>Welcome to Micropost World</h1>
    <h2>
       Just Enjoy Yourself!
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
  <%= link_to image_tag("SysUniversity.jpg", alt: "SYSU", size: "100x100"), 'http://www.sysu.edu.cn/2012/cn/index.htm' %>
<% end %>

    